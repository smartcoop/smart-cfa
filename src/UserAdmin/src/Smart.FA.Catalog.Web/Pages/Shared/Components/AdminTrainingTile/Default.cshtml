@using Microsoft.Extensions.Localization
@using Smart.FA.Catalog.Shared.Domain.Enumerations
@using Smart.FA.Catalog.Shared.Domain.Enumerations.Training

@inject IStringLocalizer<CatalogResources> _localizer
@model AdminTrainingCardViewComponentModel

@{
    var trainingDto = Model.TrainingDto;
}

<smart-card>
    <smart-card-body>
        <smart-card-title text="@trainingDto.Title"></smart-card-title>
        <smart-muted-text text="@string.Join(", ", trainingDto.TopicIds!.Select(topic => _localizer[Topic.FromValue(topic).Name])) "></smart-muted-text>
    </smart-card-body>
    <smart-card-actions>
        <div class="o-flex o-flex--vertical-center o-flex--justify-between o-flex--spaced-wide">
            <smart-pill label="@(_localizer[TrainingStatusType.FromValue(trainingDto.TrainingStatusTypeId).Name])"></smart-pill>
            <div class="c-button-toolbar">
                <a href="/admin/trainings/update/@trainingDto!.TrainingId">
                    <smart-button leading-icon="EditAlt" button-style="Borderless"></smart-button>
                </a>
                @if (Model.ShowDeleteButton)
                {
                    <form id="delete-training-form-@trainingDto.TrainingId" method="post" asp-page-handler="Delete" asp-route-id="@trainingDto!.TrainingId">
                        <button class="c-button c-button--borderless c-button--icon" type="button" data-trainingid="@trainingDto.TrainingId" data-dialog="delete-training-dialog-confirmation" onclick="setTrainingId(@trainingDto.TrainingId)">
                            <span class="c-button__content">
                                <smart-icon icon="Delete"></smart-icon>
                            </span>
                        </button>
                    </form>
                }
            </div>
        </div>
    </smart-card-actions>
</smart-card>
