@page
@model IndexModel
@{
    ViewData["Title"] = @ShowcaseResources.Homepage_Title;
}

<section class="main__presentation">
    <div class="main-title">@ShowcaseResources.Homepage_Title</div>
    <div class="main__presentation-txt">
        <p class="main__paragraph">@ShowcaseResources.Homepage_IntroductionPart1</p>
        <p class="main__paragraph">@ShowcaseResources.Homepage_IntroductionPart2</p>
        <p class="main__paragraph">@ShowcaseResources.Homepage_IntroductionPart3</p>
    </div>
</section>

@if (Model.TrainingsCount > 0)
{
    <section class="section__training-list">
        <div class="section__label">
            <h5>@ShowcaseResources.Homepage_TrainingCount @Model.TrainingsCount | @ShowcaseResources.Homepage_TrainersCount @Model.TrainersCount</h5>
        </div>

        <div class="section__label">
            <h2>@ShowcaseResources.Homepage_Subtitle</h2>
        </div>

        @foreach (var training in Model.Trainings)
        {
            @await Html.PartialAsync("_TrainingTitle", training)
        }

    </section>
}
