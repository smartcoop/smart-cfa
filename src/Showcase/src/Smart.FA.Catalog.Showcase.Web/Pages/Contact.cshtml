@page
@model Smart.FA.Catalog.Showcase.Web.Pages.ContactModel
@{
    ViewData["Title"] = @ShowcaseResources.Contact_TitlePage;
}


<section class="main__presentation">
    <div class="main-title">@ShowcaseResources.Contact_TitlePage</div>
    <div class="main__presentation-txt">
        <p>@ShowcaseResources.Contact_Presentation</p>
        <p><br />@ShowcaseResources.Contact_Presentation_SecondPart <a href="@ShowcaseResources.Contact_Presentation_Link">@ShowcaseResources.Contact_Presentation_Link</a></p>
    </div>
    <div id="sendmailConfirmation">
        <div class="c-alert c-alert--success">
            <div class="o-svg-icon o-svg-icon-circle-information">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 4C7.58172 4 4 7.58172 4 12C4 16.4183 7.58172 20 12 20C16.4183 20 20 16.4183 20 12C20 7.58172 16.4183 4 12 4ZM2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12C22 17.5228 17.5228 22 12 22C6.47715 22 2 17.5228 2 12Z" fill="#595959" />
                    <path d="M12 10C12.5523 10 13 10.4477 13 11V17C13 17.5523 12.5523 18 12 18C11.4477 18 11 17.5523 11 17V11C11 10.4477 11.4477 10 12 10Z" fill="#595959" />
                    <path d="M13.5 7.5C13.5 8.32843 12.8284 9 12 9C11.1716 9 10.5 8.32843 10.5 7.5C10.5 6.67157 11.1716 6 12 6C12.8284 6 13.5 6.67157 13.5 7.5Z" fill="#595959" />
                </svg>
            </div>
            <div class="c-alert__body">
                <div class="c-alert__text">
                    <h4 class="c-h4">@ShowcaseResources.Contact_ConfirmationMessage</h4>
                </div>
            </div>
        </div>
    </div>
    <div id="sendmailError">
        <div class="c-alert c-alert--error">
            <div class="o-svg-icon o-svg-icon-circle-information">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 4C7.58172 4 4 7.58172 4 12C4 16.4183 7.58172 20 12 20C16.4183 20 20 16.4183 20 12C20 7.58172 16.4183 4 12 4ZM2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12C22 17.5228 17.5228 22 12 22C6.47715 22 2 17.5228 2 12Z" fill="#595959" />
                    <path d="M12 10C12.5523 10 13 10.4477 13 11V17C13 17.5523 12.5523 18 12 18C11.4477 18 11 17.5523 11 17V11C11 10.4477 11.4477 10 12 10Z" fill="#595959" />
                    <path d="M13.5 7.5C13.5 8.32843 12.8284 9 12 9C11.1716 9 10.5 8.32843 10.5 7.5C10.5 6.67157 11.1716 6 12 6C12.8284 6 13.5 6.67157 13.5 7.5Z" fill="#595959" />
                </svg>
            </div>
            <div class="c-alert__body">
                <div class="c-alert__text">
                    <h4 class="c-h4">@ShowcaseResources.Contact_ErrorMessage</h4>
                </div>
            </div>
        </div>
    </div>
    <div class="main__contact-form">
        <form class="o-form-group-layout o-form-group-layout--standard" method="post" onsubmit="SubmitContactForm();return false;">
            <div class="o-form-group">
                <label class="o-form-group__label" for="formValidationnameId">@ShowcaseResources.Contact_LabelName</label>
                <div class="o-form-group__controls">
                    <input name="username" class="c-input" type="text" placeholder="@ShowcaseResources.Contact_DefaultName" id="formValidationnameId" />
                    <div class="contact-form__error"></div>
                </div>
            </div>
            <div class="o-form-group">
                <label class="o-form-group__label" for="formValidationEmailId">@ShowcaseResources.Contact_LabelEmail</label>
                <div class="o-form-group__controls">
                    <input name="useremail" class="c-input" type="email" placeholder="@ShowcaseResources.Contact_DefaultEmail" id="formValidationEmailId" />
                    <div class="contact-form__error"></div>
                </div>
            </div>

            <div class="o-form-group">
                <label class="o-form-group__label" for="textareaId">@ShowcaseResources.Contact_LabelMessage</label>
                <textarea name="useremessage" class="c-textarea" rows="5" id="textareaId" maxlength="1000"></textarea>
                <div class="contact-form__error"></div>
            </div>
            <div class="o-form-group">
                <input class="c-button c-button--primary" type="submit" value="@ShowcaseResources.Contact_LabelSend" />
            </div>
        </form>
    </div>
</section>
